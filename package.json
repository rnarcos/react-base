{
  "name": "react-base",
  "version": "1.0.0",
  "description": "A basic setup for new ReactJS projects.",
  "author": "Marcos Fernandes",
  "license": "MIT",
  "scripts": {
    "start:dev": "webpack serve --open --config ./webpack.dev.js",
    "start:prod": "webpack serve --open --config ./webpack.prod.js",
    "build:dev": "webpack --config ./webpack.dev.js",
    "build:prod": "webpack --config ./webpack.prod.js"
  },
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.13.10",
    "@babel/preset-env": "^7.13.12",
    "@babel/preset-react": "^7.12.13",
    "babel-loader": "^8.2.2",
    "clean-webpack-plugin": "^3.0.0",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.22.0",
    "html-webpack-plugin": "^5.3.1",
    "husky": "^6.0.0",
    "prettier": "^2.2.1",
    "process": "^0.11.10",
    "webpack": "^5.27.2",
    "webpack-cli": "^4.5.0",
    "webpack-dev-server": "^3.11.2",
    "webpack-merge": "^5.7.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "prettier --write"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rnarcos/react-base.git"
  },
  "bugs": {
    "url": "https://github.com/rnarcos/react-base/issues"
  },
  "homepage": "https://github.com/rnarcos/react-base#readme"
}
